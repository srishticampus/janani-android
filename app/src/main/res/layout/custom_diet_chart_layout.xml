<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_diet_chart_layout"
    android:layout_centerInParent="true"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_card_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#D5CEA3"
        app:cardCornerRadius="20dp"
        android:layout_margin="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp">

            <TextView
                android:id="@+id/tv_day_diet_chart"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Day 1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_time_diet_chart"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="sample"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_description_diet_chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_day_diet_chart"
                android:background="@drawable/main_layout_background"
                android:backgroundTint="#CCC7C7"
                android:backgroundTintMode="add"
                android:minHeight="60dp"
                android:padding="20dp"
                android:textAlignment="center"
                android:textSize="15sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>