<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="#D5CEA3"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_product_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#D5CEA3"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:paddingLeft="7dp"
                android:paddingRight="3dp"

                android:src="@drawable/shopping" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cv_product_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/cv_product_image"
            android:maxLines="1"
            android:text="Stayfree Secure Nights vhgvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvg"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_product_category"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_product_title"
            android:layout_alignStart="@id/tv_product_title"
            android:layout_marginTop="10dp"
            android:text="Period Pads"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_rs_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_product_category"
            android:layout_alignStart="@id/tv_product_title"
            android:layout_marginTop="6dp"
            android:text="@string/rs_sign"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_rs_sign"
            android:layout_alignBottom="@id/tv_rs_sign"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_rs_sign"
            android:text="200"
            android:textSize="25sp" />

