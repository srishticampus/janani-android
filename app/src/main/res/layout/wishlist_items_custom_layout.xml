        <androidx.cardview.widget.CardView
            android:id="@+id/cv_add_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/cv_remove_button"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/cv_remove_button"
            android:padding="20dp"
            app:cardBackgroundColor="#FFDDCC63"
            app:cardCornerRadius="40dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/baseline_add_shopping_cart_24" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_remove_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/tv_product_category"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:padding="20dp"
            app:cardBackgroundColor="#FFDDCC63"
            app:cardCornerRadius="40dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/baseline_delete_forever_24" />
        </androidx.cardview.widget.CardView>


