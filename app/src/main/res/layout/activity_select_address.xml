<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SelectAddressActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E5CB"
        android:paddingBottom="10dp">




    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="Your Addresses"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_all_clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/view_background"
        android:padding="10dp"
        android:text="All Clear"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_add_address_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_all_clear_button"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/tv_all_clear_button"
        android:background="@drawable/view_background"
        android:padding="10dp"
        android:text="Add new address"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_saved_address_view"
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:layout_below="@id/tv_all_clear_button"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp" />

    <Button
        android:id="@+id/bt_place_order_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/rv_saved_address_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:background="@drawable/button_view_background"
        android:text="Place order"
        android:textSize="20sp" />
</RelativeLayout>
</ScrollView>




