<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5CB"
    tools:context=".EnterAddressActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_add_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="Add New Address"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/tv_add_address_title"
            android:background="@drawable/address_pana" />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/view_background"
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            android:drawablePadding="20dp"
            android:hint="@string/prompt_user_name"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_user_address"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/view_background"
            android:drawableLeft="@drawable/ic_address"
            android:drawablePadding="20dp"
            android:hint="Enter your address"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_user_pincode"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_user_address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/view_background"
            android:drawableLeft="@drawable/number"
            android:drawablePadding="20dp"
            android:hint="Enter your pin code"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_user_city"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_user_pincode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/view_background"
            android:drawableLeft="@drawable/baseline_location_black"
            android:drawablePadding="20dp"
            android:hint="Enter your city"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_user_state"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_user_city"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/view_background"
            android:drawableLeft="@drawable/right_arrow"
            android:drawablePadding="20dp"
            android:hint="Enter your state"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_user_state"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/view_background"
            android:drawableLeft="@drawable/baseline_local_phone_24"
            android:drawablePadding="20dp"
            android:hint="@string/prompt_phone_number"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_add_location_button"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_phone_number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_view_background"
            android:text="ADD ADDRESS"
            android:textSize="20sp" />
    </RelativeLayout>

</ScrollView>