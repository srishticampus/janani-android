<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_saved_address_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"

 >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardBackgroundColor="#D5CEA3"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_display_username"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="sample"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_display_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignTop="@id/tv_display_username"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/baseline_local_phone_24"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:minWidth="150dp"
                android:paddingLeft="10dp"
                android:text="123456789"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_display_username"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/curved_background"
                android:backgroundTint="#D5CEA3"
                android:minHeight="120dp"
                android:elevation="2dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tv_display_user_address"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="20dp"
                    android:gravity="start"
                    android:maxHeight="30dp"
                    android:paddingLeft="45dp"
                    android:paddingTop="10dp"
                    android:text="Address"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_display_user_pin_code"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_display_user_address"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="20dp"
                    android:gravity="start"
                    android:maxHeight="30dp"
                    android:paddingLeft="45dp"
                    android:paddingTop="10dp"
                    android:text="pincode"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_display_user_city"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_display_user_pin_code"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="20dp"
                    android:gravity="start"
                    android:maxHeight="30dp"
                    android:paddingLeft="45dp"
                    android:paddingTop="10dp"
                    android:text="city"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_display_user_state"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_display_user_city"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="20dp"
                    android:gravity="start"
                    android:maxHeight="30dp"
                    android:paddingLeft="45dp"
                    android:paddingTop="10dp"
                    android:text="state"
                    android:textSize="15sp" />

            </RelativeLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>