<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/seller_product_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:srcCompat="@drawable/shopping" />

    <TextView
        android:id="@+id/seller_product_name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/seller_product_image"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:text="Stayfree Secure Nights
        Cottony Soft Comfort Sanitary Napkin 20 pads"
        android:textColor="#000"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/seller_product_image"
        android:background="#E3DADA"/>
    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/right_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>