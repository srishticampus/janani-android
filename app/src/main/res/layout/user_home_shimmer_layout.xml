<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5CB"
    tools:context=".UserHomeFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_search_bar_section"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/shimmer_color"
        app:cardCornerRadius="50dp" />


    <LinearLayout
        android:id="@+id/ll_categories_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/cv_search_bar_section"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/view_background"
            android:backgroundTint="@color/shimmer_color"
            android:backgroundTintMode="add" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/view_background"
            android:backgroundTint="@color/shimmer_color"
            android:backgroundTintMode="add" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/view_background"
            android:backgroundTint="@color/shimmer_color"
            android:backgroundTintMode="add" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/view_background"
            android:backgroundTint="@color/shimmer_color"
            android:backgroundTintMode="add" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/ll_categories_view"
        android:background="@color/shimmer_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="35dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="35dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="35dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
