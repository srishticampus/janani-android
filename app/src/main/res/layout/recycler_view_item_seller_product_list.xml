<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/product_list_rl">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/seller_product_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shopping" />
        </LinearLayout>



    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/seller_product_name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:text="Stayfree Secure Nights
        Cottony Soft Comfort Sanitary Napkin 20 pads"
        android:textColor="#353535" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/rs_sign"
            android:textColor="#040B32" />

        <TextView
            android:id="@+id/seller_product_price"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="200"
            android:textColor="#040B32" />
    </LinearLayout>

</LinearLayout>